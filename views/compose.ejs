<%- include("partials/header"); -%>
<h1>Compose</h1>

<form action="/compose" method="post">
  <div class="form-group">
    <label>Title</label>
    <input class="form-control" type="text" name="titleArticle">
    <label>Post</label>
    <textarea class="form-control" name="bodyArticle" rows="8" cols="80" placeholder="Write your article here"></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="publish">Publish</button>
</form>

<%- include("partials/footer"); -%>
